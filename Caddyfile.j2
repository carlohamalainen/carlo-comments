{{ lookup('env', 'API_HOST') }} {
    route /admin/* {
        uri strip_prefix /admin
        root * /home/app/elm-admin
        file_server
        try_files {path} index.html
    }

    route /v1/* {
        reverse_proxy {{ lookup('env', 'PORT') }}
    }

    tls {
        dns digitalocean {{ lookup('env', 'DO_DNS_TOKEN') }}
    }

    log {
        output file ./caddy.log
    } {level debug}.

}